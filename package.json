{
  "name": "riftbound-digital-client",
  "version": "0.1.0",
  "private": true,
  "description": "Digital TCG client for Riftbound.",
  "type": "module",
  "main": "src/app/main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "test": "echo 'tests not configured yet'",
    "pull:card-art": "node scripts/pull-card-art.mjs"
  },
  "dependencies": {
    "pixi.js": "^8.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.projectx.client",
    "productName": "Project X Client",
    "files": [
      "src/app/**",
      "src/renderer/**",
      "src/assets/**",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
